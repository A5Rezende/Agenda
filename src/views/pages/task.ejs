<%- include('../includes/head') %>

<section>
  <div class="list">
    <div class="header">
      <div class="header-add"></div>
      <div class="header-tittle"><h1>Tarefas</h1></div>
      <div class="header-add">
        <a href="/"><button class="button-add">Voltar</button></a>
      </div>
    </div>
    <div class="form">
      <% if(task.id) { %>
      <form action="/task/<%= task.id %>" method="post">
      <% } else { %>
      <form action="/task" method="post">
      <% } %>
        
        <input class="input" type="date" name="date" id="date" value="<%= task.date %>" required/>
        <input class="input" type="text" name="name" id="name" value="<%= task.name %>" required/>
        <input class="input" type="text" name="description" id="description" value="<%= task.description %>" required/>
        <input class="input" type="submit" value="Enviar" id="btn-submit"/>

      </form>
    </div>
  </div>
</section>
